                                        </div>

                                        <div class="col-md-6">
                                            <div class="login-form">
                                                <h4>Skill Name</h4>
                                                @Html.TextBoxFor(U => U.SkillName, new { @class = "form-control", placeholder = "Enter skill name", maxlength = "50" })
                                            </div>
