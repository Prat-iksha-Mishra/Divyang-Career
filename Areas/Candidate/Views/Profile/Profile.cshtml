                                        </div>
                                        <div class="col-md-6">
                                            <div class="login-form">
                                                <h4>Experience Months</h4>
                                                @Html.TextBoxFor(U => U.ExperienceMonths, new { @class = "form-control", placeholder = "Enter experience months", maxlength = "2", oninput = "this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\\..*)\\./g, '$1');" })
