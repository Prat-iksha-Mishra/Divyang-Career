                        </div>
                        <div class="tab-pane fade" id="nav-Disability-Info" role="tabpanel" aria-labelledby="nav-Disability-Info-tab">
                            @using (Html.BeginForm("DisabilityUpdateProfile", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.HiddenFor(U => U.CandidateId)
                                <div class="block-from">
                                    <h2>Disability Info</h2>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="login-form">
                                                <h4>Disability category</h4>
                                                @Html.DropDownListFor(C => C.DisabilityType, Model.DisabilityTypeDropDown, "Select disability category", new { @class = "", })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="login-form">
                                                <h4>UDID</h4>
                                                @Html.DropDownListFor(C => C.UDIDOption, Model.UDIDOptionDropDown, new { @class = "", })
                                            </div>
                                        </div>
                                        <div class="col-md-6" id="UDIDDIV">
